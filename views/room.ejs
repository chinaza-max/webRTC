<script>


let mic=1
let video=1

$("#micOn").hide()
$("#videoOn").hide()


$("#micContainer").on("click", function() {

    if (mic == 1) {
    $("#micOn").show()
    $("#micOff").hide()
    mic = 2;
  } else {
    $("#micOn").hide()
    $("#micOff").show()
    mic = 1;
  }
});

$("#videoContainer").on("click", function() {
    if (video == 1) {
        $("#videoOn").show()
        $("#videoOff").hide()
        video = 2;

        //startVideoStream(false, true)        
    } else {
        $("#videoOn").hide()
        $("#videoOff").show()
        video = 1;

       // startVideoStream(true, true)
    }
});




</script>
